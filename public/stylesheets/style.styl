vertical-align() {
  position: absolute
  top: 50%
  -webkit-transform: translateY(-50%)
  -ms-transform: translateY(-50%)
  transform: translateY(-50%)
}

no-select() {
  -webkit-touch-callout: none /* iOS Safari */
  -webkit-user-select: none   /* Chrome/Safari/Opera */
  -khtml-user-select: none    /* Konqueror */
  -moz-user-select: none      /* Firefox */
  -ms-user-select: none       /* IE/Edge */
  user-select: none           /* non-prefixed version, currently
                                  not supported by any browser */
}

button(n)
  position: absolute
  width: n
  height: n
  border-radius: 50%
  background: $main-color
  border: 2px solid rgba(0, 0, 0, .25)
  transition: $default-transition
  &:after
    content: ''
    width: 0px
    height: 0px
    top: (n / 2)
    left: (n / 2)
    background: rgba(0, 0, 0, .5)
    border-radius: 50%
    position: absolute
    transition: $default-transition
  &:hover:after
    width: n
    height: n
    top: 0px
    left: 0px

$main-color = rgba(230, 230, 230, 1)
$default-transition = all .4s ease

html
  height: 100%

body
  padding: 0
  margin: 0
  font-family: 'PT Sans Narrow', sans-serif
  background: url('/images/bg.jpg')
  background-position: top left
  background-repeat: no-repeat
  background-attachment: fixed
  background-size: contain
  -moz-background-size: cover
  -o-background-size: cover
  -webkit-background-size: cover
  no-select()
  cursor: default
a
  color: black
  text-decoration: none
  transition: $default-transition

.bottomstrip
  text-align: center
  transition: $default-transition

.bottomstrip-open
  position: absolute
  width: 80%
  height: calc(100% - 20px)
  margin-left: 10%
  padding-top: 20px
  overflow: hidden
  & .interior-resize
    height: calc(100% - 16vw)
  & .bottomstrip-wrapper
    white-space: nowrap
    overflow-x: scroll
    overflow-y: hidden
    & .bottomstrip
      bottom: 0px
      height: 14vw
  & .bottomstrip-toggle
      top: 0px
    
.bottomstrip-closed
  position: absolute
  width: 80%
  margin-left: 10%
  padding-top: 20px
  height: calc(100% - 20px)
  overflow: hidden
  & .interior-resize
    height: calc(100% - 2vw)
    margin-bottom: 15vw
  & .bottomstrip-wrapper
    & .bottomstrip
      height: 0
      top: 15vw
  & .bottomstrip-toggle
    top: -34px
    
.bottomstrip-toggle
  button(30px)
  top: 0px
  left: 0px
    
.bottomstrip-wrapper
  bottom: 0px
  position: absolute
  width: 100%

.category
  display: inline-block
  cursor: default
  padding: 20px
  transition: $default-transition
  border-radius: 50%

.category-wrapper-invisible
  visibility: none
  z-index: -1
  opacity: 0
  position: absolute
  text-align: center
  width: 100%
  margin-top: 15%
  transition: $default-transition
  font-size: 1.5em
  & .text-wrapper
    width: 0

.category-wrapper-visible
  z-index: -10
  opacity: 1
  position: absolute
  text-align: center
  width: 100%
  margin-top: 20%
  background: rgba(250, 250, 250, .15)
  transition: $default-transition 
  font-size: 1.5em
  & .text-wrapper
    width: 25%
    for $i in (1 4)
      &:nth-child({$i})
        transition: 1.5s ease
  & .category
    transition: 1s ease
  & .category-inactive
    opacity: 0
    display: inline-block
    transition: $default-transition
    cursor: default
    padding: 20px
    border-radius: 50%
    & a
      transition: $default-transition
      color: rgba(0, 0, 0, .1)
  & .category-active
    display: inline-block
    opacity: 1
    transition: $default-transition 
    cursor: default
    padding: 20px
    background: rgba(0, 0, 0, .15)
    border-radius: 50%
    & a
      cursor: default

.circle-icon
  position: relative
  width: 10vw
  height: 10vw
  display: inline-block
  border: 2px solid rgba(50, 50, 50, 1)
  border-radius: 50%
  text-align: center
  margin: 2vw
  background: no-repeat center center
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  color: rgba(0, 0, 0, 1)
  transition: $default-transition
  font-size: 1.5em
  overflow: hidden
  &:hover
    color: rgba(0, 0, 0, 1)
    & .interior
      background: rgba(255, 255, 255, .5)
      color: rgba(0, 0, 0, 1)
      transition: $default-transition
  & .interior
    vertical-align()
    position: relative
    color: rgba(0, 0, 0, 0)
    transition: $default-transition

.char-strip
  transition: $default-transition

.interior-resize
  position: absolute
  width: 100%
  overflow-y: scroll
  transition: $default-transition

.exit
  button(50px)
  right: -15px
  top: -15px
  
.findMe
  display: inline-block
  margin: 15px
  padding: 10px
  width: calc(20% - 50px)
  border-radius: 50%
  text-align: center
  transition: $default-transition
  &:hover
    background-color: rgba(255, 255, 255, .5)
  
.findMes
  width: 80%
  margin-left: 10%
  margin-top: 5%
  bottom: 0px
  
#form-email
  position: absolute
  height: 15%
  width: 100%
  top: 15%
  & input
    position: relative
    width: 30%
    padding: 10px
  
#form-name
  position: absolute
  height: 25%
  width: 100%
  & input
    position: relative
    width: 30%
    padding: 10px
    
#form-message
  position: absolute
  height: 55%
  width: 100%
  top: 30%
  & textarea
