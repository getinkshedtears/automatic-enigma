vertical-align() {
  position: absolute
  top: 50%
  -webkit-transform: translateY(-50%)
  -ms-transform: translateY(-50%)
  transform: translateY(-50%)
}

$main-color = rgba(230, 230, 230, 1)
$default-transition = all .4s ease

body
  padding: 0
  margin: 0
  font-family: 'PT Sans Narrow', sans-serif
  background: url('/images/bg.jpg') no-repeat center center fixed

a
  color: black
  text-decoration: none
  transition: $default-transition

.title-wrapper-closed
  font-size: 2em
  position: absolute
  text-align: center
  width: 100%
  margin-top: 15%
  transition: $default-transition 
  & .title
    display: inline
    transition: $default-transition
  
.title-wrapper-open
  font-size: 2em
  padding-top: 20px
  position: absolute
  text-align: center
  width: 100%
  transition: $default-transition
  & .title
    display: inline
    letter-spacing: 4vw
    transition: 1s ease
  
.category
  display: inline-block
  cursor: default
  padding: 20px
  transition: $default-transition
  border-radius: 50%
  
.text-wrapper
  width: 25%
  text-align: center
  display: inline-block
  transition: $default-transition
  
.category-wrapper-visible
  opacity: 1
  position: absolute
  text-align: center
  width: 100%
  margin-top: 20%
  background: rgba(250, 250, 250, .15)
  transition: $default-transition 
  font-size: 1.5em
  & .text-wrapper
    width: 25%
    for $i in (1 4)
      &:nth-child({$i})
        transition: 1.5s ease
  & .category
    opacity: 1
    transition: 1s ease
  & .category-inactive
    display: inline-block
    transition: $default-transition
    cursor: default
    padding: 20px
    border-radius: 50%
    & a
      transition: $default-transition
      color: rgba(0, 0, 0, .1)
  & .category-active
    display: inline-block
    transition: $default-transition 
    cursor: default
    padding: 20px
    background: rgba(0, 0, 0, .15)
    border-radius: 50%
    & a
      cursor: default

.category-wrapper-invisible
  z-index: -1
  opacity: 0
  position: absolute
  text-align: center
  width: 100%
  margin-top: 15%
  transition: $default-transition
  font-size: 1.5em
  & .text-wrapper
    width: 0
  & .category
    opacity: 1
    transition: $default-transition
    
.fullscreen
  position: relative
  width: 90%
  height: 90%
  left: 5%
  background: rgba(255, 255, 255, .5)
  vertical-align()
  
.exit
  position: absolute
  width: 50px
  height: 50px
  border-radius: 50%
  right: -15px
  top: -15px
  background: $main-color
  border: 2px solid rgba(0, 0, 0, .25)
  &:after
    content: ''
    width: 0px
    height: 0px
    top: 25px
    left: 25px
    background: black
    border-radius: 50%
    position: absolute
    transition: $default-transition
  &:hover:after
    width: 50px
    height: 50px
    top: 0px
    left: 0px

.fullscreen-interior
  height: 80%
  width: 80%
  left: 10%
  vertical-align()
  overflow-y: auto
  overflow-x: hidden
  
.important
  font-weight: bold
  
.text-header
  font-size: 1.5em
  display: inline-block
  width: 100%
  text-align: center

.name
  width: 100%
  font-size: 2em
  text-align: center
  padding-top: 10px
  
.char-wrapper-open
  position: absolute
  width: 80%
  height: calc(100% - 20px)
  margin-left: 10%
  padding-top: 20px
  overflow: hidden
  & .interior-resize
    width: 100%
    height: calc(100% - 16vw)
    overflow-y: scroll
    transition: $default-transition
  & .char-strip-wrapper
    position: absolute
    width: 100%
    bottom: 0px
    background: rgba(0, 0, 0, .5)
    white-space: nowrap
    overflow-x: scroll
    overflow-y: hidden
    & .char-strip
      bottom: 0px
      height: 14vw
      transition: $default-transition
    
.char-wrapper-closed
  position: absolute
  width: 80%
  margin-left: 10%
  padding-top: 20px
  height: calc(100% - 20px)
  overflow: hidden
  & .interior-resize
    position: absolute
    width: 100%
    height: calc(100% - 2vw)
    overflow-y: scroll
    margin-bottom: 15vw
    transition: $default-transition
  & .char-strip-wrapper
    position: absolute
    width: 100%
    bottom: 0px
    background: rgba(0, 0, 0, .75)
    & .char-strip
      height: 0
      top: 15vw
      transition: $default-transition
        
.char-wrapper-toggle
	width: 100%
	height: 10px
	background: rgba(0, 0, 0, .5)
	transition: $default-transition
	&:hover
	  height: 20px

.char-icon
  width: 10vw
  height: 10vw
  display: inline-block
  border-radius: 50%
  border: 2px solid rgba(0, 0, 0, .5)
  text-align: center
  margin: 2vw
  & .interior
    vertical-align()
    position: relative