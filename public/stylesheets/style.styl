#form-response
  float: left
  margin-left: 30px
  height: 50%
  padding: 1px 6px
  
#form-submit
  position: absolute
  width: 100%
  height: 15%
  top: 85%
  & input[type=submit]
    bottom: 0
    width: 10%
    height: 50%
