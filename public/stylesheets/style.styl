#form-wrapper
  position: absolute
  width: 80%
  margin-left: 10%
  height: 100%
  & input
    font-family: 'PT Sans Narrow', sans-serif
  
.fullscreen
  position: relative
  width: 90%
  height: 90%
  left: 5%
  background: rgba(255, 255, 255, .5)
  vertical-align()
  
.fullscreen-interior
  height: 80%
  width: 80%
  left: 10%
  vertical-align()
  overflow-y: auto
  overflow-x: hidden

.important
  font-weight: bold

.library-post-wrapper
  width: 80%
  margin-left: 10%
  margin-top: 10px
  text-align: center
  padding: 10px
  & .interior
    display: inline
    transition: $default-transition
    &:hover
      font-size: 1.5em

.name
  width: 100%
  font-size: 2em
  text-align: center
  padding-top: 10px
  
.padded
  padding-left: 40px
  padding-right: 20px
  margin-left: 5%
  width: calc(90% - 60px)
  transition: $default-transition
  
.padded-sidebar
  padding-left: 40px
  padding-right: 20px
  margin-left: 10%
  width: calc(90% - 60px)
  transition: $default-transition
    
.posts-link
  position: relative
  width: 10vw
  height: 10vw
  display: inline-block
  border-radius: 50%
  border: 2px solid rgba(50, 50, 50, 1)
  text-align: center
  margin: 2vw
  color: rgba(0, 0, 0, 1)
  transition: $default-transition
  font-size: 1.5em
  overflow: hidden
  & .interior
    vertical-align()
    position: relative
    color: rgba(0, 0, 0, 1)
    transition: $default-transition
    
.post-text
  position: absolute
  width: 200%
  left: -50%
  height: auto
  top: -10%
  transition: 6s ease
  font-size: .75em

.post-wrapper
  position: relative
  display: inline-block
  border: 2px solid rgba(50, 50, 50, 1)
  width: 80%
  height: 10vw
  text-align: center
  background: white
  margin-top: 10%
  overflow: hidden
  &:hover
    & .post-text
      top: -200%
  
.sidebar-closed
  position: absolute
  height: 100%
  left: -10%
  width: 10%
  transition: $default-transition
  & .sidebarToggle
    top: 1em
  & .circle-icon
    border-radius: 0
    top: 1em
    width: 80%
    margin: auto
  
.sidebar-open
  position: absolute
  width: 10%
  left: 0
  height: 100%
  transition: $default-transition
  & .sidebarToggle
    top: 1em
  & .circle-icon
    top: 1em
    border-radius: 0
    width: 80%
    margin: auto
    &:hover
      color: rgba(0, 0, 0, 1)
      & .interior
        background: rgba(255, 255, 255, .5)
        color: rgba(0, 0, 0, 1)
        transition: $default-transition
    & .interior
      vertical-align()
      position: relative
      color: rgba(0, 0, 0, 0)
      transition: $default-transition
      
.sidebarToggle
  button(30px)
  right: -34px

.text-header
  font-size: 1.5em
  display: inline-block
  width: 100%
  text-align: center
  
.text-wrapper
  width: 25%
  text-align: center
  display: inline-block
  transition: $default-transition
  
.thing4Active
  color: rgba(0, 0, 0, 1)
  transition: $default-transition
  position: absolute

.thing4Inactive
  color: rgba(0, 0, 0, 0)
  transition: $default-transition
  position: absolute

.title
  display: inline
  transition: $default-transition

.title-wrapper-closed
  z-index: 10
  font-size: 2em
  position: absolute
  text-align: center
  width: 100%
  margin-top: 15%
  padding-bottom: 20%
  transition: $default-transition
  
.title-wrapper-open
  font-size: 2em
  padding-top: 20px
  position: absolute
  text-align: center
  width: 100%
  padding-bottom: 0
  transition: $default-transition
  & .title
    letter-spacing: 4vw
    transition: 1s ease